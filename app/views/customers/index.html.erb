<%= render 'shared/nav_top' %>
	<div class="row">
		<%= render 'shared/left_nav' %>
		<div id="content-wrapper">
			<div class="row">
				<div class="col-lg-12">
					<%= render 'shared/messages' %>
					<div class="row">
						<div class="col-lg-12">									
							<div class="clearfix">
								<h1 class="pull-left">Customers</h1>										
							</div>
						</div>
					</div>
					
					<div class="row">
						<div class="col-lg-12">
							<div class="main-box no-header clearfix">
								<div class="main-box-body clearfix">
									<div class="table-responsive">
										<table class="table user-list table-hover">
											<thead>
												<tr>
													<th class="text-center"><span>Customer</span></th>
													<th class="text-center"><span>Number of Payments</span></th>
													<th class="text-center"><span>Created</span></th>
													<th>&nbsp;</th>
												</tr>
											</thead>
											<tbody>
											  <% @customers.each do |c| %>
												<tr>
													<td class="text-center">
						                                <%= mail_to c.customer_email, c.customer_name, target: "_blank", class: "user-link" %>
													</td>
													<td class="text-center">
														<%= @payments.where(customer_id: c.id).count %>
													</td>
													<td class="text-center">
														<%= c.created_at.strftime("%m/%d/%Y") %>
													</td>
													<td style="width: 20%;">
														<%= link_to c, class: "table-link" do %>
															<span class="fa-stack">
																<i class="fa fa-square fa-stack-2x"></i>
																<i class="fa fa-search-plus fa-stack-1x fa-inverse"></i>
															</span>
														<% end %>
														<%= link_to edit_customer_path(c), class: "table-link" do %>
															<span class="fa-stack">
																<i class="fa fa-square fa-stack-2x"></i>
																<i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
															</span>
														<% end %>																
														<%= link_to c, method: :delete, data: {confirm: "Are you sure?"}, class: "table-link danger" do %>
															<span class="fa-stack">
																<i class="fa fa-square fa-stack-2x"></i>
																<i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
															</span>
														<% end %>
													</td>
												</tr>
											  <% end %>
											</tbody>
										</table>
									</div>
								</div>
							</div>
						</div>
					</div>
				
				</div>
			</div>
		  <%= render 'shared/footer' %>
		</div>
	</div>
</div>
</div>