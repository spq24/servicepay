	<div id="theme-wrapper">
		<header class="navbar" id="header-navbar">
		</header>
		<div id="page-wrapper" class="container-app">

		<div class="row">
			<div id="nav-col">
				<section id="col-left" class="col-left-nano">
					<div id="col-left-inner" class="col-left-nano-content">
						<div id="user-left-box" class="clearfix hidden-sm hidden-xs">
						</div>
						<div class="collapse navbar-collapse navbar-ex1-collapse" id="sidebar-nav">	
						</div>
					</div>
				</section>
			</div>
			<div id="content-wrapper">
				<div class="row">
					<div class="col-lg-12">
						<div class="row">
							<div class="col-lg-6">								
								<div class="clearfix">
									<%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post} do |f| %>
									  <%= devise_error_messages! %>
									  <% resource.class.invite_key_fields.each do |field| -%>
										<p><%= f.label field, "Email for Person You Want to Invite" %>
										<%= f.text_field field, class: "form-control" %></p>
									  <% end -%>
									  <%= f.submit t("devise.invitations.new.submit_button"), class: "btn btn-success pull-right" %>
									<% end %>					
								</div>
							</div>
						</div>					
					</div>
				</div>
			  <%= render 'shared/footer' %>
			</div>
		</div>
	</div>
</div>