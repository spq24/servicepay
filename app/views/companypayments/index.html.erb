      <%= render 'shared/nav_top' %>
      <div class="row">
        <%= render 'shared/left_nav' %>
        <div id="content-wrapper">
          <div class="row">
            <div class="col-lg-12">
            <%= render 'shared/messages' %>
              <div class="row">
                <div class="col-lg-12">                 
                  <h1>Payments From Companies</h1>
                </div>
                
              </div>
              
              <div class="row">
                <div class="col-lg-12">
                  <div class="main-box clearfix">
                    <header class="main-box-header clearfix">
                      <h2 class="pull-left">Company Payments</h2>
                    </header>
                    
                    <div class="main-box-body clearfix">
                      <div class="table-responsive clearfix">
                        <table class="table table-hover">
                          <thead>
                            <tr>
                              <th><span>Payment ID</span></a></th>
                              <th><span>Company Name</span></a></th>
                              <th><span>Company Email</span></a></th>
                              <th><span>Coupon</span></a></th>
                              <th class="text-center"><span>Amount</span></th>
                              <th class="text-right"><span>Date</span></th>
                              <th>&nbsp;</th>
                            </tr>
                          </thead>
                          <tbody>
                          <% @company_payments.each do |p| %>
                            <tr>
                              <td>
                                <%= p.id %>
                              </td>
                              <td>
                                <%= link_to "#{Company.find(p.company_id).users.first.first_name} #{Company.find(p.company_id).users.first.last_name}", Company.find(p.company_id) if Company.find(p.company_id).present? %>
                              </td>
                              <td>
                                <%= mail_to Company.find(p.company_id).users.first.email, Company.find(p.company_id).users.first.email, target: "_blank" if Company.find(p.company_id).present? %>
                              </td>
                              <td>
                                
                              </td>
                              <td class="text-center">
                                <%= number_to_currency(p.amount / 100) %>
                              </td>
                              <td class="text-right">
                                <%= p.created_at.strftime("%m/%d/%Y") %>
                              </td>
                              <td>
                                <%= link_to p, method: :delete, data: {confirm: "Are you sure?"}, class: "table-link danger" do %>
                                  <span class="fa-stack">
                                    <i class="fa fa-square fa-stack-2x"></i>
                                    <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                                  </span>
                                <% end %>
                              </td>
                            </tr>
                          <% end %>
                          </tbody>
                        </table>
                      </div>
                    </div>
                    <div class="main-box-body clearfix">
                      <%= paginate @company_payments %>
                      </div>
                  </div>
                </div>
              </div>              
            </div>
          </div>
          <%= render 'shared/footer' %>
        </div>
      </div>
    </div>
  </div>
  